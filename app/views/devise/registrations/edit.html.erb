
<div class = "container edit-user container jumbotron home">
<div class ="logout-area">
  <% if user_signed_in? %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "btn btn-light" %>
  <% end %>
</div>
<h3 class="title">Cadastre seus dados abaixo para a plataforma te ajudar melhor!</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :altura, :class => "label" %>
    <div class="input-group">
      <%= f.number_field :altura, autofocus: true, :class => "form-control" %>
    </div>
</div>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :Indíce_de_massa_corporal, :class => "label" %>
    <div class="input-group">
      <%= f.number_field :imc, autofocus: true, :class => "form-control" %>
    </div>
</div>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :Medicamento_Atual, :class => "label" %>
    <div class="input-group">
      <%= f.text_field :medicamento, autofocus: true, :class => "form-control" %>
    </div>
</div>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :Peso, :class => "label" %>
    <div class="input-group">
      <%= f.number_field :peso, autofocus: true, :class => "form-control" %>
    </div>
</div>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :pressão_media, :class => "label" %>
    <div class="input-group">
      <%= f.number_field :pressao_media, autofocus: true, :class => "form-control" %>
    </div>
</div>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :Outros_problemas_de_saúde, :class => "label" %>
    <div class="input-group">
      <%= f.number_field :problemas_extras, autofocus: true, :class => "form-control" %>
    </div>
</div>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :confirme_a_senha_atual, :class => "label" %>
    <div class="input-group">
      <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
    </div>
</div>
<div class="form-group dis-inl-blc mar-l-20">
    <%= f.label :Pratica_exercícios?, :class => "label" %>
    <div class="input-group">
      <%= f.check_box :exercicios, autofocus: true, :class => "form-control" %>
    </div>
</div>

<div class="actions btn-cadastrar-infos">
<%= f.submit "Atualizar dados", :class => "btn btn-light btn-lg" %>
</div>
<% end %>